 {erl_opts, [debug_info]}.

 {port_env, [
%  {"CXXFLAGS", "$CXXFLAGS -D_TRACE"},
   {"CXXFLAGS", "$CXXFLAGS -DMSSQL"},    % DB_INDICATOR=long
   {"CXXFLAGS", "$CXXFLAGS -std=c++98"}, % c++03
   {"CXXFLAGS", "$CXXFLAGS -D__unix"},
   {"CXXFLAGS", "$CXXFLAGS -D__STDC_FORMAT_MACROS -D__STDC_CONSTANT_MACROS"},
%  {"CXXFLAGS", "$CXXFLAGS -g"},         % default
%  {"CXXFLAGS", "$CXXFLAGS -Wall"},      % default
   {"CXXFLAGS", "$CXXFLAGS -Wextra"},
%  {"CXXFLAGS", "$CXXFLAGS -Werror"},
%  {"CXXFLAGS", "$CXXFLAGS -fPIC"},      % default
   {"CXXFLAGS", "$CXXFLAGS -fno-common"},
   {"CXXFLAGS", "$CXXFLAGS -I$EGEN_HOME/inc"},
% == odbc ==
% -- darwin / iodbc --
   {"darwin", "CXXFLAGS", "$CXXFLAGS -Wno-deprecated-declarations"},
   {"darwin", "LDFLAGS", "$LDFLAGS -L/usr/lib -liodbc -liodbcinst"},
% -- ubuntu / unixodbc --
   {"linux", "LDFLAGS", "$LDFLAGS -L/usr/lib/x86_64-linux-gnu/odbc -lodbc -lodbcinst"},
% == odbc ==
%  {"LDFLAGS", "$LDFLAGS -shared"}       % default
   {"LDFLAGS", "$LDFLAGS -L$EGEN_HOME/lib -legen"}
 ]}.

